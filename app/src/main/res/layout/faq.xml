<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".99"
            android:background="@drawable/raduis_all"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".55"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight=".1"
                    android:background="@drawable/reduis"
                    android:text="Group 1"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13sdp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcyFaqGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_weight=".89" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".01"
                    android:gravity="center_horizontal">

                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_4sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorLighterGray" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".45"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight=".124"
                    android:background="@drawable/reduis"
                    android:text="Group 2"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13sdp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcyFaqGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".876"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>