<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Scenarios.ScenarioSignUp.Controller.SignUp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".998"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/raduis_bottom"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/rostologo" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/linear_bg1"
                android:gravity="center_vertical"
                android:hint="full name"
                android:inputType="text"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorDarkerGray3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/linear_bg1"
                android:gravity="center_vertical"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorDarkerGray3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/linear_bg1"
                android:gravity="center_vertical"
                android:hint="phone"
                android:inputType="phone"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorDarkerGray3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/linear_bg1"
                android:gravity="center_vertical"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorDarkerGray3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight=".86"
                    android:gravity="center_vertical"
                    android:text=" Have a referral code on  "
                    android:textColor="@color/colorDarkerGray3"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <Switch
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:autoSizeMaxTextSize="@dimen/_10sdp"
                    android:autoSizeMinTextSize="@dimen/_5sdp"
                    android:checked="true"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:showText="true"
                    android:switchTextAppearance="@style/Theme.MyTheme"
                    android:textColor="@color/colorAccent"
                    android:textOff="OFF"
                    android:textOn="ON"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:theme="@style/Theme.MyTheme"
                    app:showText="true"

                    />


            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/linear_bg1"
                android:gravity="center_vertical"
                android:hint="Referral code No"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorDarkerGray3" />


            <CheckBox
                android:id="@+id/remember_me"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:buttonTint="@color/colorPrimary"
                android:checked="true"
                android:text="Accept all terms and conditions  "
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_11sdp" />


            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/reduis"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:background="@drawable/fb_bg"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:padding="5dp"
                    android:scaleX=".9"
                    android:scaleY=".9"
                    android:src="@drawable/facebooklogo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="Log in with facebook"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>