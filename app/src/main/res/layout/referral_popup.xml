<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_260sdp"
    android:background="@drawable/raduis_all_blue"
    android:backgroundTint="@color/colorPopup"
    android:gravity="center_horizontal"
    android:minWidth="@dimen/_300sdp"
    android:minHeight="@dimen/_260sdp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPopup"
        android:layoutDirection="ltr"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="20dp"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="oval"
                android:thicknessRatio="2"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="@dimen/_30sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/drpicture" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Ahmed Fathi Abd Elazm"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="right|center_vertical"
                        android:padding="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="join at :"
                        android:textColor="@color/colorDarkerGray2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity=""
                        android:padding="@dimen/_2sdp"
                        android:text="20/1/2019"
                        android:textColor="@color/colorDarkerGray2" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:gravity="right|center_vertical"
                        android:padding="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="NO.OF booking :"
                        android:textColor="@color/colorDarkerGray2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:gravity=""
                        android:padding="@dimen/_2sdp"
                        android:text="30"
                        android:textColor="@color/colorDarkerGray2" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:gravity="center_vertical|right"
                    android:text="Earned by him : "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="@dimen/_2sdp"
                    android:text="30000000000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:gravity="center_vertical|left"
                    android:padding="@dimen/_2sdp"
                    android:text="EGP"/>

            </LinearLayout>


            <Button
                android:id="@+id/btnViewAllBooking"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="View all booking"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/reduis"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>