<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".43">


                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_30sdp"
                    custom:auto_cycle="true"
                    custom:indicator_visibility="invisible"
                    custom:pager_animation="Stack"

                    custom:pager_animation_span="1100">


                </com.daimajia.slider.library.SliderLayout>

                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/custom_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/raduis_all_service_info"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="HOLLYWOOD SMILE"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/raduis_top_service_info" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".56"
                android:background="@drawable/raduis_bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp"
                android:weightSum="1">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Info"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="In the center of Dr.Nour El Din Mostafa you can beautify your teeth and get a celebrity smile through the Veneers , which are used with the best international techniques through the material of zirconia and emacs. thwe characteristic of imacs are characterized by qualities similar to natural teeth characterized"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Features"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                                <CheckBox
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".8"
                                    android:button="@drawable/custom_checkbox"
                                    android:scaleX="1"
                                    android:scaleY="1"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:drawablePadding="@dimen/_12sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/colorAccent"
                                    android:text="Feature 1"/>



                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".8"
                                android:button="@drawable/custom_checkbox"
                                android:scaleX="1"
                                android:scaleY="1"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:drawablePadding="@dimen/_12sdp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/colorAccent"
                                android:text="Feature 2"/>

                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".8"
                                android:button="@drawable/custom_checkbox"
                                android:scaleX="1"
                                android:scaleY="1"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:drawablePadding="@dimen/_12sdp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/colorAccent"
                                android:text="Feature 3"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnBookingNow"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@drawable/raduis_all"
                            android:backgroundTint="@color/colorPrimary"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Booking Now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>